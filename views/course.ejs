<%- include('partials/_header'); %>
	<%- include('partials/_navigation'); %>

		<div class="all-title-box">
			<div class="container text-center">
				<h1>
					<%= course.name %><span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span>
				</h1>
			</div>
		</div>
		
		<div id="overviews" class="section wb">
			<div class="container">
				<div class="row">
					<div class="col-lg-9 blog-post-single">
						<div class="blog-item">
							<div class="image-blog">
								<img src="/images/blog_single.jpg" alt="" class="img-fluid">
							</div>
							<div class="post-content">
								<% if(user && !(user.courses.includes(course._id)))  {%>
								<div class="post-date">
									<form method="post" action="/courses/enroll">
										<input type="hidden" name="course_id" value="<%= course._id %>">
										<button class="btn btn-lg btn-warning text-white">
											<span>Enroll</span>
										</button>
									</form>
								</div>
								<% } %>
								<div class="meta-info-blog">
									<span><i class="fa fa-calendar"></i> <a href="#">May 11, 2015</a> </span>
								</div>
								<div class="blog-title">
									<h2><a href="/" title="">
											<%= course.name %>
										</a></h2>
								</div>
								<div class="blog-desc">
									<blockquote class="default">
										<%= course.description %>
									</blockquote>
								</div>
							</div>
						</div>

						<div class="blog-author">
							<div class="author-bio">
								<h3 class="author_name"><a href="#"><%= course.user.name %></a></h3>
							</div>
							<div class="author-desc">
								<ul class="author-social">
									<li><a href="#"><i class="fa fa-facebook"></i></a></li>
									<li><a href="#"><i class="fa fa-twitter"></i></a></li>
									<li><a href="#"><i class="fa fa-skype"></i></a></li>
								</ul>
							</div>
						</div>

					</div><!-- end col -->

				</div><!-- end row -->
			</div><!-- end container -->
		</div><!-- end section -->

		<%- include('partials/_footer'); %>